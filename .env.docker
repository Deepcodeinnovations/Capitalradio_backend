# Database Configuration for Docker
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=capitalfm_system_db
MYSQL_USER=capitalfm_user
MYSQL_PASSWORD=your_secure_password

# FastAPI Database URL (automatically set in docker-compose)
DATABASE_URL=mysql+aiomysql://root:your_secure_root_password@mysql:3306/capitalfm_system_db

# Email Configuration
EMAIL_HOST=mail.capitalradio.co.ug
EMAIL_PORT=587
EMAIL_USERNAME=noreply@capitalradio.co.ug
EMAIL_PASSWORD=your_email_password
EMAIL_ENCRYPTION=TLS
EMAIL_FROM_ADDRESS=noreply@capitalradio.co.ug
EMAIL_FROM_NAME=Capital Radio

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=600000000 
SECRET_KEY=your_jwt_secret_key_here
TX_SECRET_KEY=your_transaction_secret_key_here

# Application Settings
DEBUG=false
ENVIRONMENT=production

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379/0

# Optional: File Upload Configuration
MAX_UPLOAD_SIZE=5000
UPLOAD_PATH=/app/static/uploads

# Optional: Logging Level
LOG_LEVEL=INFO

# Optional: CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://capitalradio.co.ug
